/* Create table about famous people with some information about them */

CREATE TABLE famous_people (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    age INTEGER,
    career TEXT,
    significant_other TEXT,
    networth INTEGER);
    
